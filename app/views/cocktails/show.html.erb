<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} #{dose.ingredient.name}" %>
      <%= link_to "Delete", dose_path(dose), method: :delete, class:"btn btn-default"  %>
    </li>
    <% end %>
  </ul>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class:"btn btn-default"  %>
  <%= link_to "Back", cocktails_path, class:"btn btn-default" %>
</div>
