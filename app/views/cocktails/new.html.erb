<div class="container">
  <h1>New cocktail</h1>
  <%= simple_form_for (@cocktail) do |f|  %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class:"btn btn-success" %>
    <%= link_to "Back", cocktails_path, class:"btn btn-success" %>
  <% end %>
</div>
