<div class="container">
  <h1>New cocktail</h1>
  <%= simple_form_for (@cocktail) do |f|  %>
    <%= f.input :name %>
    <%= f.association :ingredients, as: :check_boxes%>
    <%= f.association :doses %>

    <%= f.button :submit %>
    <%= link_to "Back", cocktails_path, class:"btn btn-default" %>
  <% end %>
</div>
